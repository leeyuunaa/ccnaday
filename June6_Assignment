************101 hosts / VLAN 101 / dnssfarm****************
c 7bits
s /32 - /7 = /25
i 128i sa 4th octet

N: 10.0.0.128 /25 (255.255.255.128)
1st: 10.0.0.129 /25
Br: 10.0.0.255 /25
Not: 10.0.1.0 /25


*************52 hosts / VLAN 52 / webservers***************
c 6bits
s /32 -/6 = /26 
i 64i sa 4th octet 

N: 10.0.0.64 /26 (255.255.255.192)
1st: 10.0.0.65 /26
Br: 10.0.0.127 /26
Not: 10.0.0.128 /26


***********8500 hosts / VLAN 800 / pornhub.com*************
c 14bits 
s /32 - /14 = /18 
i 64i sa 3rd octet 

N: 10.0.64.0 /18 (255.255.192.0)
1st: 10.0.64.1 /18
Br: 10.0.127.255 /18
Not: 10.0.128.0 /18


**********17000 hosts / VLAN 200 / bahalaka.com************
c 15bits
s /32 - /15 = /17
i 128i sa 3rd octet

N: 10.0.128.0 /17 (255.255.128.0)
1st: 10.0.128.1 /17
Br: 10.0.255.255 /17
Not: 10.1.0.0 /17

